<p id="notice"><%= notice %></p>

<h1>Districts</h1>

<table class="table is-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>District id</th>
      <th>User</th>
      <th>Project</th>
      <th>Project id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @districts.each do |district| %>
      <tr>
        <td><%= district.name %></td>
        <td><%= district.id %></td>
        <td><%= district.user_id %></td>
        <td><%= (Project.find(district.project_id)).name%></td>
        <td><%= (Project.find(district.project_id)).id %></td>
        <td><%= link_to 'Show', district %></td>
        <td><%= link_to 'Edit', edit_district_path(district) %></td>
        <td><%= link_to 'Destroy', district, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

